<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.atcrowdfunding.manager.dao.RoleDao">

	<resultMap id="BaseResultMap" type="com.atguigu.atcrowdfunding.bean.Role">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="insert" parameterType="map">
		insert into t_role (id, name)
		values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR})
	</insert>

	<select id="selectAll" resultMap="BaseResultMap">
		select id, name
		from t_role
	</select>
	
	<update id="updateRole" parameterType="map">
		update t_role
		set name = #{name,jdbcType=VARCHAR}
		where id = #{id,jdbcType=INTEGER}
	</update>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select id, name
		from t_role
		where id = #{id,jdbcType=INTEGER}
	</select>
	
	<select id="selectByName" resultMap="BaseResultMap" parameterType="java.lang.String">
		select id, name
		from t_role
		where name = #{name,jdbcType=VARCHAR}
	</select>
	
  	<select id="queryRoleList" resultMap="BaseResultMap" parameterType="map">
    	select id, name
    	from t_role
    	<where>
    		<if test="queryText != null">
				name like concat('%', #{queryText}, '%')
			</if>
    	</where>
    	limit #{startIndex,jdbcType=INTEGER},#{pagesize,jdbcType=INTEGER} 
  	</select>
	
	<select id="countRole" resultType="int" parameterType="map">
    	select count(*) from t_role 
    	<where>
    		<if test="queryText != null">
				name like concat('%', #{queryText}, '%')
			</if>
    	</where>
  	</select>
  	
  	<delete id="deleteRolesByPrimaryKey" parameterType="Integer[]" >
    	delete from t_role 
    	where id in 
    	<foreach collection="array" item="id" index="no" open="("  
            separator="," close=")">  
            #{id}  
        </foreach>  
  	</delete>
	
</mapper>